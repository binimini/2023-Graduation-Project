{
  "exclude": ["node_modules"],
  "compilerOptions": {
    "target": "es2020",
    "moduleResolution": "node",
    "module": "es6",
    "outDir": "./dist",
    "strict": true,
    "baseUrl": "src",
    "paths": {},
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react"
  },
  "ts-node": {
    "esm" : true
  }
}